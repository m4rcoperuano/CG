@model CodeGeneration.Models.User.RegisterVM
@using CaptchaMvc.HtmlHelpers

@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-md-5 col-sm-6">
            <div class="well">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th colspan="2" class="text-center">Welcome To Code Generation
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="2" class="text-center">Create your own code generations
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-center">Useful for almost any language!
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-center">Share your code with others!  
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-center">I'm tired of creating the same old boiler plate code every time I start a new project. 
                                Same html templates, same CRUD methods with slight variations, same code over and over... I hope  
                                this website will be as useful to you as it is to me. If you have suggestions/ comments/ complaints, please send them to
                                marco.j.ledesma@gmail.com!
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-1 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">
                        <span class="glyphicon glyphicon-user"></span>
                        User Sign Up
                    </h1>
                </div>
                @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.LabelFor(x => x.FirstName, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.FirstName)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.LastName, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.LastName)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Email, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Password, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ConfirmPassword)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-4">
                            @Html.Captcha(6)
                                </div>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                        <button class="btn btn-primary" type="submit">
                            Submit
                        </button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
